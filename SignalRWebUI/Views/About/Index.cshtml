@model List<SignalRWebUI.Dtos.AboutDtos.ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımda</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımda İle Alakalı İşlemleri Tablodan Yapabilirsiniz .
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Resim</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.ImageUrl</td>
										<td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/About/CreateAbout/" class="btn btn-outline-primary">Yeni Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@await Component.InvokeAsync("_NotificationComponentPartial")


