@model SignalRWebUI.Dtos.AboutDtos.UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkımda Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="AboutId" />
                            <div class="form-group">
                                <label for="aboutname">Hakkımda Başlığını Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="aboutname">
                            </div>
                            <div class="form-group">
                                <label for="aboutdespcription">Hakkımda Açıklamasını Düzenleyiniz</label>
                                <textarea rows="5" type="text" class="form-control" asp-for="Description" id="aboutdespcription"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Kategoriyi Güncelle</button>
                            <a href="/About" class="btn btn-warning">Geri Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@await Component.InvokeAsync("_NotificationComponentPartial")


