@model SignalRWebUI.Dtos.CategoryDtos.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kategori Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="CategoryId" />
                            <div class="form-group">
                                <label for="categoryname">Kategori Adını Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="CategoryName" id="categoryname">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="status">Kategori Aktif mi?</label>
                                    <select asp-for="CategoryStatus" class="form-control">
                                        <option value="true">Evet</option>
                                        <option value="false">Hayır</option>
                                    </select>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Kategoriyi Güncelle</button>
                            <a href="/Category" class="btn btn-warning">Geri Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@await Html.PartialAsync("Default.cshtml")

