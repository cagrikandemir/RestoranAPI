@model SignalRWebUI.Dtos.ContactDtos.UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Rezervasyon Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="ContactId" />
                            <div class="form-group">
                                <label for="name">Konum Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Location" id="name">
                            </div>
                            <div class="form-group">
                                <label for="phone">İletişim Numarasını Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Phone" id="phone">
                            </div>
                            <div class="form-group">
                                <label for="e-mail">E-Mail Adresini Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Mail" id="e-mail">
                            </div>
                            <div class="form-group">
                                <label for="personcount">Açıklama Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="FooterDespcription" id="personcount">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">iletişim Güncelle</button>
                            <a href="/Contact" class="btn btn-warning">Geri Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


