@model List<SignalRWebUI.Dtos.DiscountDtos.ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İndirimler</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
                            İndirimlerle Alakalı İşlemleri Tablodan Yapabilirsiniz . Tema Bütünlüğünü Bozmamak İçin <strong>2 Adet</strong> Kullanın.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün Adı</th>
									<th scope="col">Açıklama</th>
									<th scope="col">İndirim Miktarı(%)</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Aktif</th>
									<th scope="col">Pasif</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
                                    count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Despcription</td>
										<td>@item.Amount</td>
										<td>@item.Status</td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-outline-success">Güncelle</a></td>
										<td><a href="/Discount/StatusChangeToActive/@item.DiscountId" class="btn btn-outline-warning">Aktif</a></td>
										<td><a href="/Discount/StatusChangeToPassive/@item.DiscountId" class="btn btn-outline-dark">Pasif</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Discount/CreateDiscount/" class="btn btn-outline-primary">Yeni Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


