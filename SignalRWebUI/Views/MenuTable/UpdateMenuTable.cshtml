@model SignalRWebUI.Dtos.MenuTableDtos.UpdateMenuTableDto
@{
    ViewData["Title"] = "UpdateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Masa Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="MenuTableId" />
                            <div class="form-group">
                                <label for="name">Masa Adını Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                            </div>
                            <div class="form-group">
                                <label for="status">Masa Aktif mi?</label>
                                <select asp-for="Status" class="form-control">
                                    <option value="true">Evet</option>
                                    <option value="false">Hayır</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Masa Güncelle</button>
                            <a href="/MenuTable" class="btn btn-warning">Geri Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@await Component.InvokeAsync("_NotificationComponentPartial")