@model SignalRWebUI.Dtos.NotificationDto.CreateNotificationDto
@{
    ViewData["Title"] = "CreateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Bildirim Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="type">Bildirim Türü Giriniz</label>
                                <input type="text" class="form-control" asp-for="Type" id="type">
                            </div>
                            <div class="form-group">
                                <label for="despcription">Bildirim Açıklaması Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description" id="despcription">
                            </div>
                            <div class="form-group">
                                <label for="ıcon">Bildirim Iconu Giriniz</label>
                                <input type="text" class="form-control" asp-for="Icon" id="ıcon">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Bildirim Ekle</button>
                            <a href="/Notifications" class="btn btn-warning">Geri Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@await Component.InvokeAsync("_NotificationComponentPartial")