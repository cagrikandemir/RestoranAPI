@model SignalRWebUI.Dtos.ProductDtos.CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Ürün Girişi</div>
                        </div>
                            <div class="form-group">
                                <label for="productname">Ürün Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="ProductName" id="productname">
                            </div>

                            <div class="form-group">
                                <label for="despcription">Ürün Açıklamasını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Despcription" id="despcription">
                            </div>
                            <div class="form-group">
                                <label for="price">Ürün Fiyatı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Price" id="price">
                            </div>

                            <div class="form-group">
                                <label for="ımageurl">Ürün Görseli Seçiniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ımageurl">
                            </div>
                            <div class="form-group">
                                <label for="categoryıd">Ürün Kategorisi Seçiniz</label>
                                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                            </div>
                        <div class="card-action">
                            <button class="btn btn-success">Ürünü Ekle</button>
                            <a href="/Product" class="btn btn-warning">Geri Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@await Component.InvokeAsync("_NotificationComponentPartial")