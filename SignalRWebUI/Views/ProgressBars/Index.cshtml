        <script type="text/javascript">
            $(document).ready(() => {
                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7111/SignalRHub").build();
                $("#connstatus").text(connection.state);
                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                     setInterval(() => {
                        connection.invoke("SendProgress");
                    }, 250);
                }).catch((err) => { console.log(err) });

                connection.on("ReceiveMoneyCasesProgress", (value) => {
                    $("#totalmoneycases").text(value);
                });
                connection.on("ReceiveActiveOrderProgress", (value2) => {
                    $("#activeorder").text(value2);
                });

                connection.on("ReceiveMenuTableProgress", (value3) => {
                    $("#menutable").text(value3);
                });
                connection.on("ReceiveMenuTableProgress", (value4) => {
                    $("#totalMenuTableCountProgress").text(value4);
                    $("#totalMenuTableCountProgress").empty();
                    $("#totalMenuTableCountProgress").append(`
                    <div class="d-flex justify-content-between mb-1">
                    <span class="text-muted">Toplam Masa Sayısı</span>
                    <span class="text-muted fw-bold"> ${value4}</span>
                    </div>
                    <div class="progress mb-2" style="height: 7px;">
                    <div class="progress-bar bg-success" role="progressbar" style="width:${value4}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value4}%"></div>
                    </div>
                    `)
                });
                connection.on("ReceiveProductPriceAvgProgress", (value5) => {
                            let formattedValue = Number(value5).toLocaleString("tr-TR", {
                minimumFractionDigits: 2,
                maximumFractionDigits: 2
            });

            // Progress bar için % değer (örnek: 100 ile sınırlar)
            let progressValue = Math.min(value5, 100);
                    $("#totalPriceAvgProgress").text(value5);
                    $("#totalPriceAvgProgress").empty();
                    $("#totalPriceAvgProgress").append(`
                    <div class="d-flex justify-content-between mb-1">
                    <span class="text-muted">Ortalama Ürün Fiyatları</span>
                    <span class="text-muted fw-bold"> ${formattedValue}₺</span>
                    </div>
                    <div class="progress mb-2" style="height: 7px;">
                    <div class="progress-bar bg-success" role="progressbar" style="width:${progressValue}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${progressValue}%"></div>
                    </div>
                    `)
                });
                connection.on("ReceiveMenuTableProgress", (value4) => {
                    $("#totalMenuTableCountProgress").text(value4);
                    $("#totalMenuTableCountProgress").empty();
                    $("#totalMenuTableCountProgress").append(`
                    <div class="d-flex justify-content-between mb-1">
                    <span class="text-muted">Toplam Masa Sayısı</span>
                    <span class="text-muted fw-bold"> ${value4}</span>
                    </div>
                    <div class="progress mb-2" style="height: 7px;">
                    <div class="progress-bar bg-info" role="progressbar" style="width:${value4}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value4}%"></div>
                    </div>
                    `)
                });
                connection.on("ReceiveProductAvgPriceByHamburgerProgress", (value6) => {
                    $("#TotalHamburgerPriceAvgProgress").text(value6);
                    $("#TotalHamburgerPriceAvgProgress").empty();
                    $("#TotalHamburgerPriceAvgProgress").append(`
                    <div class="d-flex justify-content-between mb-1">
                    <span class="text-muted">Ortalama Hamburger Fiyatı</span>
                    <span class="text-muted fw-bold"> ${value6}₺</span>
                    </div>
                    <div class="progress mb-2" style="height: 7px;">
                    <div class="progress-bar bg-primary" role="progressbar" style="width:${value6}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value6}%"></div>
                    </div>
                    `)
                });
                connection.on("ReceiveDrinkProductCountProgress", (value7) => {
                    $("#TotalDrinkPriceAvgProgress").text(value7);
                    $("#TotalDrinkPriceAvgProgress").empty();
                    $("#TotalDrinkPriceAvgProgress").append(`
                    <div class="d-flex justify-content-between mb-1">
                    <span class="text-muted">İçecek Kategori Sayısı</span>
                    <span class="text-muted fw-bold"> ${value7}</span>
                    </div>
                    <div class="progress mb-2" style="height: 7px;">
                    <div class="progress-bar bg-warning" role="progressbar" style="width:${value7}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value7}%"></div>
                    </div>
                    `)
                });
                connection.on("ReceiveTotalOrderCountProgress", (value8) => {
                    $("#TotalOrderCountProgress").text(value8);
                    $("#TotalOrderCountProgress").empty();
                    $("#TotalOrderCountProgress").append(`
                    <div class="d-flex justify-content-between mb-1">
                    <span class="text-muted">Toplam Sipariş Sayısı</span>
                    <span class="text-muted fw-bold"> ${value8}</span>
                    </div>
                    <div class="progress mb-2" style="height: 7px;">
                    <div class="progress-bar bg-dark" role="progressbar" style="width:${value8}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value8}%"></div>
                    </div>
                    `)
                });
                connection.on("ReceiveBookingCountProgress", (value9) => {
                    $("#TotalBookingCount").text(value9);
                });
                connection.on("ReceiveCategoryCountProgress", (value10) => {
                    $("#CategoryCount").text(value10);
                });
                connection.on("ReceiveProductCountProgress", (value11) => {
                    $("#ProductCount").text(value11);
                });


            });
        </script>

