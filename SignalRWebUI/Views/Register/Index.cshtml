@model SignalRWebUI.Dtos.IdentityDtos.RegisterDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Kayıt Ol</title>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="/css/style.css" />
</head>
<body>

	<div class="card">
		<div class="form-box">
			<h2>Kayıt Ol</h2>
			<form method="post">
			<div class="input-box">
				<input type="text" placeholder="Adınız" required asp-for="Name" id="name">
			</div>
			<div class="input-box">
					<input type="text" placeholder="Soyadınız" required asp-for="Surname" id="surname">
			</div>
			<div class="input-box">
					<input type="text" placeholder="Kullanıcı Adı" required asp-for="Username" id="username">
			</div>
			<div class="input-box">
					<input type="email" placeholder="Email" required asp-for="Mail" id="mail" pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
			</div>
			<div class="input-box">
					<input type="password" placeholder="Şifre" required asp-for="Password" id="password">
			</div>
			<button class="button">Kayıt Ol</button>
			<div class="toggle">
				Zaten hesabın var mı?
				<a href="/Login/Index">Giriş Yap</a>
			</div>
			</form>
		</div>
	</div>

</body>
</html>
