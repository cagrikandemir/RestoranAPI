@model SignalRWebUI.Dtos.IdentityDtos.UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil Ayarları</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kullanıcı Bilgileri Düzenleme İşlemleri</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Adınızı Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                            </div>
                            <div class="form-group">
                                <label for="surname">Soyadınızı Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Surname" id="surname">
                            </div>
                            <div class="form-group">
                                <label for="email">Mail Adresinizi Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Mail" id="email">
                            </div>
                            <div class="form-group">
                                <label for="username">Kullanıcı Adınızı Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Username" id="username">
                            </div>
                            <div class="form-group">
                                <label for="password">Şifrenizi Düzenleyiniz</label>
                                <input type="password" class="form-control" asp-for="Password" id="password">
                            </div>
                        </div>
@*                         <div class="card-body">
                            <div class="form-group">
                                <label for="status">Kategori Aktif mi?</label>
                                <select asp-for="CategoryStatus" class="form-control">
                                    <option value="true">Evet</option>
                                    <option value="false">Hayır</option>
                                </select>
                            </div>
                        </div> *@
                        <div class="card-action">
                            <button class="btn btn-success">Bilgileri Güncelle</button>
                            <a href="/Category" class="btn btn-warning">Geri Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


