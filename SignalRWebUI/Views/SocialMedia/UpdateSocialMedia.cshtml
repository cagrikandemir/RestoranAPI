@model SignalRWebUI.Dtos.SocialMediaDtos.UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Sosyal Medya Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="SocialMediaId" />
                            <div class="form-group">
                                <label for="title">Başlık Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                            <div class="form-group">
                                <label for="url">Sosyal Medya Link Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Url" id="url">
                            </div>
                            <div class="form-group">
                                <label for="icon">İkon Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Icon" id="icon">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Sosyal Medya Güncelle</button>
                            <a href="/SocialMedia" class="btn btn-warning">Geri Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


