@model SignalRWebUI.Dtos.TestimonialDtos.UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Referans Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="TestimonialId" />
                            <div class="form-group">
                                <label for="name">Referans Adını Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                            </div>
                            <div class="form-group">
                                <label for="title">Referans Başlığını Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                            <div class="form-group">
                                <label for="comment">Referans Yorumunu Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="Comment" id="comment">
                            </div>
                            <div class="form-group">
                                <label for="ımgurl">Referans Görselini Düzenleyiniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ımgurl">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="status">Referans Aktif mi?</label>
                                <select asp-for="Status" class="form-control">
                                    <option value="true">Evet</option>
                                    <option value="false">Hayır</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Referans Güncelle</button>
                            <a href="/Testimonial" class="btn btn-warning">Geri Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@await Component.InvokeAsync("_NotificationComponentPartial")

